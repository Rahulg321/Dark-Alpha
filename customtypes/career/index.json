{
  "format": "page",
  "id": "career",
  "label": "Career",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "Excerpt",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "department": {
        "type": "Select",
        "config": {
          "label": "Department",
          "placeholder": "",
          "options": [
            "Capital Markets",
            "Due Diligence",
            "Investment Team",
            "M&A/Origination",
            "Public Markets/Hedge Funds",
            "Technology"
          ],
          "default_value": "Capital Markets"
        }
      },
      "hire_level": {
        "type": "Select",
        "config": {
          "label": "Hire Level",
          "placeholder": "",
          "options": [
            "Managing Director",
            "Associate",
            "Intern",
            "Analyst",
            "Vice President"
          ]
        }
      },
      "status": {
        "type": "Select",
        "config": {
          "label": "Status",
          "placeholder": "",
          "options": ["Active", "Hold", "Passed", "Upcoming"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "text_block": {
              "type": "SharedSlice"
            },
            "criteria_info_slice": {
              "type": "SharedSlice"
            },
            "firm_overview": {
              "type": "SharedSlice"
            },
            "blog_content_index": {
              "type": "SharedSlice"
            },
            "favourite_indeustry": {
              "type": "SharedSlice"
            },
            "blog_text_block": {
              "type": "SharedSlice"
            },
            "hero_slice": {
              "type": "SharedSlice"
            },
            "career_content_index": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
